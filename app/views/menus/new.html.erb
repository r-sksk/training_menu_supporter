<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規トレーニングメニューを作成
      </h1>
    </div>
  </div>
</section>

<% if @menu.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@menu.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @menu.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @menu do |f| %>
          <div class="field">
            <%= f.label :"トレーニング名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :"トレーニング内容", class: "label" %>
            <%= f.text_area :body, value: "スポーツのジャンル：
人数：
手順：
アドバイス：", class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :"トレーニング風景・画像", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>

          <%= f.submit '投稿', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>

